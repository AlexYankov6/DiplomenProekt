@model ProektAleks.Data.ReservationApartment

@{
    ViewData["Title"] = "Details";
}

<h1>Детайли</h1>

<div>
    <h4>Резервиран апартамент</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Прякор
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Users.UserName)
        </dd>
        <dt class = "col-sm-2">
            Апартаменти
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apartments.NameApartments)
        </dd>
        <dt class = "col-sm-2">
           Коментар
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        @if (User.IsInRole("Admin"))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateReview)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateReview)
            </dd>
        }
        
        <dt class = "col-sm-2">
            Дата на оглед
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateChoice)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }
     |
    <a asp-action="Index">Назад</a>
</div>
