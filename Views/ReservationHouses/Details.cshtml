@model ProektAleks.Data.ReservationHouse

@{
    ViewData["Title"] = "Details";
}
<style>
    .row {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 8px;
        box-shadow: 3px 3px 3px 1px;
        height: 270px;
        width: 360px;
        backdrop-filter: blur(5px);
        background-color: rgba(255, 255, 255, 0.7);
        margin-left: auto;
        margin-right: auto;
        font-family: cursive;
    }

    .col-sm-10 {
        width: auto;
        display: flex;
        justify-content: center;
    }

    .col-sm-2 {
        width: auto;
        display: flex;
        justify-content: center;
    }

    .col-md-4 {
        width: auto;
        width: 400px;
        font-family: cursive;
    }

    .form-control {
        font-family: cursive;
    }

    body {
        background-image: url(https://www.vidyard.com/media/real-estate-video-marketing-1920x1080-1.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    }

    .HeadingDetails {
        font-family: cursive;
        font-weight: 900;
        color: darkred;
        text-shadow: 1px 1px black;
    }
</style>
<center> <h1 class="HeadingDetails">Детайли за резервираната къща </h1> </center>

<div>
    
   
    <dl class="row">
        <dt class = "col-sm-2">
            Резервирана от:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Users.UserName)
        </dd>
        <dt class = "col-sm-2">
            Име на къща:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Houses.NameProperty)
        </dd>
        <dt class = "col-sm-2">
            Коментар:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        @* <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateReview)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateReview)
        </dd> *@
        <dt class = "col-sm-2">
            Дата на оглед:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateChoice)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }
    
</div>
