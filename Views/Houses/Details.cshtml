@model ProektAleks.Data.House

@{
    ViewData["Title"] = "Details";
}

<h1>Детайли</h1>

<div>
    <h4>House</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Каталожен номер
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatalogNumberId)
        </dd>
        <dt class = "col-sm-2">
            Име на къщата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameProperty)
        </dd>
        <dt class = "col-sm-2">
            Етажи
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Floors)
        </dd>
        <dt class = "col-sm-2">
            Категория
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categories.Name)
        </dd>
        <dt class = "col-sm-2">
            Квадратура
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quadrature)м²
        </dd>
        <dt class = "col-sm-2">
            Дворно място
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YardSpace)
        </dd>
        <dt class = "col-sm-2">
            Пристройка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Annex)
        </dd>
        <dt class = "col-sm-2">
            Гараж
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Garage)
        </dd>
        <dt class = "col-sm-2">
            Адрес на къщата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AddressProperty)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Снимки
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" width="240" />
        </dd>
        <dt class = "col-sm-2">
            Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)лв
        </dd>
        <dt class = "col-sm-2">
            Дата на обявата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateRegister)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }
     |
    <a asp-action="Index">Назад</a>
</div>
